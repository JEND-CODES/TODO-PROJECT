{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}

        <div class="alert alert-danger login-alert-error" role="alert">

            {{ error.messageKey|trans(error.messageData, 'security') }}

        </div>

    {% endif %}

<div class="center-box">     

    <form action="{{ path('login') }}" method="post">

        <input placeholder="NOM" type="text" id="username" name="_username" value="{{ last_username }}" required />

        <input placeholder="MOT DE PASSE" type="password" id="password" name="_password" required />

        <div class="regular-spacer"></div>

        <input type="checkbox" id="remember_me" name="_remember_me" checked/>
        <label class="remember-check-box" for="remember_me">Se souvenir de moi</label>

        <div class="regular-spacer"></div>

        <button class="btn btn-special-success" type="submit">
            Se connecter
        </button>

    </form>

</div>
{% endblock %}
