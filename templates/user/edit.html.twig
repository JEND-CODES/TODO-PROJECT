{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block header_title %}

<h1 class="center-box special-title mt-2">Modifier <strong>{{ user.username }}</strong></h1>

{% endblock %}

{% block header_img %}{% endblock %}

{% block body %}

    <div class="row center-box">

        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success">Modifier</button>

        {{ form_end(form) }}

    </div>

{% endblock %}
